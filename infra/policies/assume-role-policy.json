{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Effect": "Allow",
      "Principal": {
        "Federated": "${github_provider_arn}"
      },
      "Action": "sts:AssumeRoleWithWebIdentity",
      "Condition": {
        "StringEquals": {
          "token.actions.githubusercontent.com:aud": "sts.amazonaws.com"
        },
        "StringLike": {
          "token.actions.githubusercontent.com:sub": [
            "repo:${owner}/${github_repo}:*",
            "repo:${owner}/${github_repo}:ref:refs/heads/*",
            "repo:${owner}/${github_repo}:pull_request",
            "repo:${owner}/${github_repo}:environment:*"
          ]
        }
      }
    }
  ]
} 